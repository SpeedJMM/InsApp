<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.sdust.insapp.activity.queryview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F1F1F1">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fitsSystemWindows="true"
        android:clipToPadding="true"
        android:background="@color/colorAccent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back"
                android:id="@+id/back"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/order_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical">
                    <RadioButton
                        android:id="@+id/order_rb_0"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_button_border_selected"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:text="设备"
                        android:textSize="15sp"
                        android:textColor="#FFF"
                        android:button="@null"/>
                    <RadioButton
                        android:id="@+id/order_rb_1"
                        android:layout_width="wrap_content"
                        android:minWidth="55dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_button_border"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_horizontal"
                        android:text="非设备"
                        android:textSize="15sp"
                        android:textColor="#FFF"
                        android:button="@null"/>
                </RadioGroup>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="7dp"
                    android:text="工单"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>
            </LinearLayout>


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:visibility="gone"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/title_text"
        android:background="@drawable/card_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#888888"
            android:textSize="13sp"
            android:id="@+id/online"/>
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="非设备"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#888888"
            android:textSize="13sp"
            android:id="@+id/offline"/>
    </LinearLayout>
    <ImageView
        android:visibility="gone"
        android:layout_below="@id/title_text"
        android:id="@+id/id_tab_line_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:background="@mipmap/slidingcursor" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/order_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:backgroundTint="#4876FF"
        app:srcCompat="@drawable/ic_add"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_marginTop="16px"
        android:layout_below="@id/id_tab_line_iv"
        android:id="@+id/viewpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>
