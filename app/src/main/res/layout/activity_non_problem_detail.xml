<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.sdust.insapp.activity.NonProblemDetailActivity">
    <TextView
        android:id="@+id/tv_non_problem_detail_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:gravity="center"
        android:background="@color/title_color"
        android:textColor="#000000"
        android:text="非设备问题"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ScrollView
        android:id="@+id/sv_non_problem_detail_scrollview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_non_problem_detail_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">
                <TextView
                    android:id="@+id/tv_non_problem_detail_time_key"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/problem_find_time"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_weight="4"/>

                <TextView
                    android:id="@+id/tv_non_problem_detail_time_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:layout_weight="6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/tv_non_problem_detail_description_key"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:text="@string/problem_description" />

                <EditText
                    android:id="@+id/et_non_problem_detail_description_value"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_non_problem_detail_appearance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="@string/problem_appearance" />

                    <Spinner
                        android:id="@+id/tv_non_problem_detail_appearance_value"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/tv_non_problem_detail_problem_part"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="@string/problem_position" />

                <EditText
                    android:id="@+id/tv_non_problem_detail_view_part"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tv_non_problem_detail_process_mode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="@string/process_mode" />

                <Spinner
                    android:id="@+id/spinner_non_problem_detail_method"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:id="@+id/tv_non_problem_detail_pictures"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:text="@string/pictures" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tupian_a"
                    android:layout_margin="1dp">

                    <GridView
                        android:id="@+id/ngiv_non_problem_detail_choose_picture"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_margin="2dp"
                        android:horizontalSpacing="0dp"
                        android:verticalSpacing="15dp"
                        android:numColumns="5"
                        android:columnWidth="90dp"
                        android:stretchMode="columnWidth"
                        android:listSelector="@null"
                        android:gravity="center"
                        android:focusable="false" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="right">
                    <Button
                        android:id="@+id/btn_non_problem_detail_modify"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:background="#EEE685"
                        android:text="@string/btn_modify"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp" />
                    <Button
                        android:id="@+id/btn_non_problem_detail_delete"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:background="#EEE685"
                        android:text="@string/btn_delete"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp"
                         />

                    <Button
                        android:id="@+id/btn_non_problem_detail_cancel"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:background="#EEE685"
                        android:text="@string/btn_cancel"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp"
                         />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
